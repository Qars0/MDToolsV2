<Window x:Class="MDToolsV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MDToolsV2"
        mc:Ignorable="d"
        Title="MDTools prototype" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Menu">
            <Setter Property="Padding" Value="4"/>
        </Style>
        
        <Style TargetType="MenuItem">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8 2"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="ScrollViewer">
    <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"/>
    <Setter Property="Padding" Value="3"/>
</Style>
    </Window.Resources>
    
    <Grid AllowDrop="True"
      Drop="Grid_Drop"
      DragEnter="Grid_DragEnter"
      DragOver="Grid_DragOver">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Menu DockPanel.Dock="Top" Background="#F0F0F0" Grid.ColumnSpan="2" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="File">
                <!-- Подменю File -->
                <MenuItem Header="Open"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>

            <MenuItem Header="Edit" Click="MenuItem_Click">
                <!-- Подменю Edit -->
                <MenuItem Header="Copy"/>
                <MenuItem Header="Paste"/>
            </MenuItem>
        </Menu>
        
        <Border Grid.Column="1" Background="White" BorderBrush="#FFDDDDDD" BorderThickness="2,0,0,0" Margin="0,0,0,0" HorizontalAlignment="Right">
            <ScrollViewer x:Name="FilesListViewer" CanContentScroll="True" Margin="3" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FilesStackPanel" Margin="0,0,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="Добавленные файлы:" FontWeight="Bold" Margin="0,0,0,0"/>

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>

    
</Window>
